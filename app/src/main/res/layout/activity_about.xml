<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="10dp"
              tools:context=".activity.AboutActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:srcCompat="@drawable/ic_launcher"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:layout_margin="10dp">
            <TextView
                    android:text="SIACOES"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"/>

            <TextView
                    android:text="Sistema Integrado de Atividades Complementares, Orientações e Estágios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
            android:text="Sistema desenvolvido pelo Curso de Engenharia de Software da UTFPR Câmpus Dois Vizinhos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
    <TextView
            android:text="Professores responsáveis:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:text="André Roberto Ortoncelli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:text="Franciele Beal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:text="Newton Carlos Will"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>