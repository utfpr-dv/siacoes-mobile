<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="15dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/layout_register"
            android:clickable="true">

        <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:srcCompat="@drawable/ic_supervisor_register"
                android:contentDescription="@string/nav_header_desc"/>
        <TextView
                android:text="Registro de Orientação"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textAlignment="textStart"/>

    </LinearLayout>

    <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" android:id="@+id/view_register"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?android:attr/selectableItemBackground" android:id="@+id/layout_proposal">

        <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:srcCompat="@drawable/ic_proposal"
                android:contentDescription="@string/nav_header_desc"/>
        <TextView
                android:text="Proposta de TCC 1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textAlignment="textStart"/>

    </LinearLayout>

    <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" android:id="@+id/space_proposal_1"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" android:id="@+id/view_proposal"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" android:id="@+id/space_proposal_2"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?android:attr/selectableItemBackground" android:id="@+id/layout_project">

        <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:srcCompat="@drawable/ic_project"
                android:contentDescription="@string/nav_header_desc"/>
        <TextView
                android:text="Projeto de TCC 1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textAlignment="textStart"/>

    </LinearLayout>

    <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" android:id="@+id/view_project"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?android:attr/selectableItemBackground" android:id="@+id/layout_final_project">

        <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:srcCompat="@drawable/ic_final_project"
                android:contentDescription="@string/nav_header_desc"/>
        <TextView
                android:text="Versão Final de TCC 1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textAlignment="textStart"/>

    </LinearLayout>

    <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" android:id="@+id/space_final_project_1"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" android:id="@+id/view_final_project"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" android:id="@+id/space_final_project_2"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?android:attr/selectableItemBackground" android:id="@+id/layout_thesis">

        <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:srcCompat="@drawable/ic_thesis"
                android:contentDescription="@string/nav_header_desc"/>
        <TextView
                android:text="Monografia de TCC 2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textAlignment="textStart"/>

    </LinearLayout>

    <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" android:id="@+id/view_thesis"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?android:attr/selectableItemBackground" android:id="@+id/layout_final_thesis">

        <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:srcCompat="@drawable/ic_final_thesis"
                android:contentDescription="@string/nav_header_desc"/>
        <TextView
                android:text="Versão Final de TCC 2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textAlignment="textStart"/>

    </LinearLayout>

    <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" android:id="@+id/view_final_thesis"/>

</LinearLayout>